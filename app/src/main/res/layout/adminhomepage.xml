<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F4F1E1"
        android:padding="16dp"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:src="@drawable/dietdietmusttry_logo" />

        <TextView
            android:id="@+id/textview2"
            android:layout_width="98dp"
            android:layout_height="26dp"
            android:layout_centerInParent="true"
            android:text="Home Page"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText"
            tools:layout_editor_absoluteX="156dp"
            tools:layout_editor_absoluteY="30dp" />

        <ImageView
            android:id="@+id/right_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_menu_24" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Welcome back, Weiss"
            app:layout_constraintEnd_toStartOf="@+id/logo" />

    </RelativeLayout>

    <TextView
        android:id="@+id/titleTable"
        android:layout_width="155dp"
        android:layout_height="26dp"
        android:text="Summary of Users"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="122dp" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="414dp"
        android:layout_height="153dp"
        android:stretchColumns="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTable">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000" />

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:padding="8dp"
                android:text="Number of Registered users:"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="8dp"
                android:text="80"
                tools:ignore="HardcodedText" />

        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000" />

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:padding="8dp"
                android:text="Number of Nutritionists:"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="8dp"
                android:text="20"
                tools:ignore="HardcodedText" />

        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000" />

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:padding="8dp"
                android:text="Number of Admins:"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="8dp"
                android:text="10"
                tools:ignore="HardcodedText" />

        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000" />

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center_vertical"
                android:padding="8dp"
                android:text="Total Number of Users:"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="8dp"
                android:text="110"
                tools:ignore="HardcodedText" />

        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000" />

    </TableLayout>

    <Button
        android:id="@+id/addAdminButton"
        android:layout_width="165dp"
        android:layout_height="50dp"
        android:backgroundTint="#9C27B0"
        android:radius="15dp"
        android:text="View all accounts"
        android:textSize="10sp"
        tools:ignore="HardcodedText,MissingConstraints,SmallSp"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="313dp" />

    <Button
        android:id="@+id/addFAQbutton"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#4CAF50"
        android:radius="15dp"
        android:text="Add an FAQ"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@+id/faqTable"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="HardcodedText,MissingConstraints,SmallSp"
        tools:layout_editor_absoluteX="30dp" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="165dp"
        android:layout_height="51dp"
        android:backgroundTint="#009688"
        android:radius="15dp"
        android:text="Add an admin"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@+id/addAdminButton"
        tools:ignore="HardcodedText,MissingConstraints,SmallSp"
        tools:layout_editor_absoluteX="123dp" />

    <TableLayout
        android:id="@+id/faqTable"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:stretchColumns="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backButton">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000" />

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:padding="8dp"
                android:text="Number of FAQs:"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="8dp"
                android:text="8"
                tools:ignore="HardcodedText" />

        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000" />
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp">

    <!-- Image on the left -->
    <ImageView
        android:id="@+id/consultation_icon"
        android:layout_width="40dp"
        android:layout_height="77dp"
        android:src="@drawable/user_icon" />

    <!-- Vertical LinearLayout for text and icon -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="141dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingEnd="1dp">

        <!-- Top line of text -->
        <TextView
            android:id="@+id/consultation_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/consultation_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/consultation_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/consultation_nutritionistName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp" />
        <!-- Bottom line of text -->
        <TextView
            android:id="@+id/consultation_client_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp" />

        <!-- Status text -->
        <TextView
            android:id="@+id/consultation_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal" />
    </LinearLayout>
</LinearLayout>

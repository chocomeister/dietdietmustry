<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="#FFECB3">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/titletext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title:"
            android:textSize="15sp"
            android:textStyle="bold"
            android:paddingStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/faqTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/titletext"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/qnstext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question:"
            android:textSize="15sp"
            android:textStyle="bold"
            android:paddingStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/titletext" />

        <TextView
            android:id="@+id/faqQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textSize="15sp"
            android:maxLines="1"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/qnstext"
            app:layout_constraintTop_toBottomOf="@+id/titletext" />

        <TextView
            android:id="@+id/anstext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answer:"
            android:textSize="15sp"
            android:textStyle="bold"
            android:paddingStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/faqQuestion" />

        <TextView
            android:id="@+id/faqAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/anstext"
            app:layout_constraintTop_toBottomOf="@+id/faqQuestion" />

        <TextView
            android:id="@+id/datetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date Created:"
            android:textSize="15sp"
            android:textStyle="bold"
            android:paddingStart="4dp"
            app:layout_constraintStart_toStartOf="@+id/anstext"
            app:layout_constraintTop_toBottomOf="@+id/faqAnswer" />

        <TextView
            android:id="@+id/faqDateCreated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginStart="4dp"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/datetext"
            app:layout_constraintTop_toBottomOf="@+id/faqAnswer" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="89dp"
            android:layout_height="85dp"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/pngtree_faq_icon_on_white_background_png_image_4915284" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="@color/white">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:src="@drawable/dietdietmusttry_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/date_text_view"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="2dp"
        android:text="Today"
        android:background="@drawable/rounded_rectangle_day"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@id/menu_icon"
        app:layout_constraintHorizontal_bias="0.279"
        app:layout_constraintStart_toEndOf="@id/logo"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/menu_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_baseline_menu_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/days_of_week"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:columnCount="7"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Monday -->
        <TextView
            android:id="@+id/mon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/rounded_rectangle_day"
            android:gravity="center"
            android:text="Mon"
            android:textColor="@android:color/black"
            android:padding="4dp"
            android:textSize="16sp"
            android:clickable="true"
            android:focusable="true" />

        <!-- Tuesday -->
        <TextView
            android:id="@+id/tue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="Tue"
            android:textColor="@android:color/black"
            android:padding="4dp"
            android:textSize="16sp"
            android:clickable="true"
            android:focusable="true" />

        <!-- Wednesday -->
        <TextView
            android:id="@+id/wed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="Wed"
            android:textColor="@android:color/black"
            android:padding="4dp"
            android:textSize="16sp"
            android:clickable="true"
            android:focusable="true" />

        <!-- Thursday -->
        <TextView
            android:id="@+id/thu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="Thu"
            android:textColor="@android:color/black"
            android:padding="4dp"
            android:textSize="16sp"
            android:clickable="true"
            android:focusable="true" />

        <!-- Friday -->
        <TextView
            android:id="@+id/fri"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="Fri"
            android:textColor="@android:color/black"
            android:padding="4dp"
            android:textSize="16sp"
            android:clickable="true"
            android:focusable="true" />

        <!-- Saturday -->
        <TextView
            android:id="@+id/sat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="Sat"
            android:textColor="@android:color/black"
            android:padding="4dp"
            android:textSize="16sp"
            android:clickable="true"
            android:focusable="true" />

        <!-- Sunday -->
        <TextView
            android:id="@+id/sun"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="Sun"
            android:textColor="@android:color/black"
            android:padding="4dp"
            android:textSize="16sp"
            android:clickable="true"
            android:focusable="true" />


    </GridLayout>

    <!-- CardView for Calorie Chart -->
    <androidx.cardview.widget.CardView
        android:id="@+id/calorie_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/days_of_week"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <ProgressBar
            android:id="@+id/calorie_progressbar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:indeterminateOnly="false"
            android:progressDrawable="@drawable/stats_progress"
            android:layout_gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/progress_calorielimit"/>

        <TextView
            android:id="@+id/progress_calorielimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:text="Left with:\n 1600 \nkcal"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/progress_intake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Intake: 800 kcal"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            />


    </androidx.cardview.widget.CardView>

    <!-- Details CardView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/details_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/calorie_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Details Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/today_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today Details"
                    android:textSize="18sp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/edit_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit" />

            </LinearLayout>

            <Button
                android:id="@+id/log_food_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Log Food" />

            <TextView
                android:id="@+id/register_to_access"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register to access the meal log"
                android:gravity="center"
                android:textColor="@android:color/holo_red_dark" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

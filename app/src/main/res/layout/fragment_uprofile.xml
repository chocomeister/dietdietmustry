<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F4F1E1"
            android:padding="16dp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:src="@drawable/dietdietmusttry_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:text="Your Profile"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/noti_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/baseline_notifications_24" />
        </RelativeLayout>


        <!-- Profile Picture Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/profile_picture"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/profile"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:layout_marginEnd="16dp" />

            <Button
                android:id="@+id/upload_picture_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Picture"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Details Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <!-- Left Column (Labels) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingEnd="8dp">

                <!-- Full Name -->
                <TextView
                    android:id="@+id/full_name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Name"
                    android:textStyle="bold" />

                <!-- Date of Birth -->
                <TextView
                    android:id="@+id/date_of_birth_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date of Birth"
                    android:textStyle="bold" />

                <!-- Gender -->
                <TextView
                    android:id="@+id/gender_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textStyle="bold" />

                <!-- Phone Number -->
                <TextView
                    android:id="@+id/phone_number_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:textStyle="bold" />

                <!-- Email Address -->
                <TextView
                    android:id="@+id/email_address_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email Address"
                    android:textStyle="bold" />

                <!-- Dietary Preferences -->
                <TextView
                    android:id="@+id/dietary_preferences_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dietary Preferences"
                    android:textStyle="bold" />

                <!-- Allergies or Intolerances -->
                <TextView
                    android:id="@+id/allergies_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Allergies or Intolerances"
                    android:textStyle="bold" />

                <!-- Health Goals -->
                <TextView
                    android:id="@+id/health_goals_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Health Goals"
                    android:textStyle="bold" />

                <!-- Daily Calorie Limit -->
                <TextView
                    android:id="@+id/daily_calorie_limit_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily Calorie Limit"
                    android:textStyle="bold" />

                <!-- Current Weight -->
                <TextView
                    android:id="@+id/current_weight_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Weight"
                    android:textStyle="bold" />

                <!-- Current Height -->
                <TextView
                    android:id="@+id/current_height_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Height"
                    android:textStyle="bold" />

                <!-- Activity Level -->
                <TextView
                    android:id="@+id/activity_level_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Activity Level"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Right Column (Data) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <!-- Full Name -->
                <TextView
                    android:id="@+id/full_name_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Doe" />

                <!-- Date of Birth -->
                <TextView
                    android:id="@+id/date_of_birth_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01/01/1990" />

                <!-- Gender -->
                <TextView
                    android:id="@+id/gender_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male" />

                <!-- Phone Number -->
                <TextView
                    android:id="@+id/phone_number_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123-456-7890" />

                <!-- Email Address -->
                <TextView
                    android:id="@+id/email_address_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="john.doe@example.com" />

                <!-- Dietary Preferences -->
                <TextView
                    android:id="@+id/dietary_preferences_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vegetarian" />

                <!-- Allergies or Intolerances -->
                <TextView
                    android:id="@+id/allergies_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Peanuts" />

                <!-- Health Goals -->
                <TextView
                    android:id="@+id/health_goals_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lose Weight" />

                <!-- Daily Calorie Limit -->
                <TextView
                    android:id="@+id/daily_calorie_limit_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2000" />

                <!-- Current Weight -->
                <TextView
                    android:id="@+id/current_weight_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="70 kg" />

                <!-- Current Height -->
                <TextView
                    android:id="@+id/current_height_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="175 cm" />

                <!-- Activity Level -->
                <TextView
                    android:id="@+id/activity_level_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Moderate" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F4FBF8">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F4FBF8">

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F4FBF8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="114dp"
                    android:layout_height="113dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/dietdietmusttry_logo" />

            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Nutritionist Registration"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout2" />

        <!-- FirstName and LastName side by side -->
        <LinearLayout
            android:id="@+id/nameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/textView2">

            <!-- FirstName EditText -->
            <EditText
                android:id="@+id/firstName"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#E6E0E9"
                android:hint="First name"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="14sp" />

            <!-- LastName EditText -->
            <EditText
                android:id="@+id/lastName"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#E6E0E9"
                android:hint="Last name"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Username EditText -->
        <EditText
            android:id="@+id/userNameCreate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="20dp"
            android:background="#E6E0E9"
            android:hint="Username"
            android:inputType="text"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/nameLayout" />

        <!-- Date of Birth EditText -->

        <!-- Email EditText -->

        <!-- Phone Number EditText -->
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#E6E0E9"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="12dp"
            android:hint="Email Address"
            android:inputType="text"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/userNameCreate"
            tools:layout_editor_absoluteX="0dp" />

        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="20dp"
            android:background="#E6E0E9"
            android:hint="Phone Number"
            android:inputType="text"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/email" />

        <!-- Gender RadioGroup -->
        <LinearLayout
            android:id="@+id/genderLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@id/editTextPhone">

            <RadioGroup
                android:id="@+id/genderRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbMale"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Male"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/rbFemale"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Female"
                    android:textSize="14sp" />

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pwLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/genderLayout">

        <!-- Password and Confirm Password -->
        <EditText
            android:id="@+id/enterPW"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#E6E0E9"
            android:hint="Enter password"
            android:inputType="textPassword"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/genderLayout" />

        <EditText
            android:id="@+id/confirmPW"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#E6E0E9"
            android:hint="Confirm password"
            android:inputType="textPassword"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/enterPW" />

        </LinearLayout>

        <Spinner
            android:id="@+id/specializationSpinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="#E6E0E9"
            android:dropDownWidth="wrap_content"
            android:hint="Specialization:"
            android:inputType="text"
            android:spinnerMode="dropdown"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/pwLayout"
            app:layout_constraintStart_toStartOf="@+id/pwLayout"
            app:layout_constraintTop_toBottomOf="@id/pwLayout" />

        <EditText
            android:id="@+id/experienceEditText"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="20dp"
            android:background="#E6E0E9"
            android:hint="Experience:"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:lines="4"
            android:maxLines="6"
            android:scrollbars="vertical"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/specializationSpinner" />

        <!-- Register Button -->
        <LinearLayout
            android:id="@+id/newRadioGroupLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@id/experienceEditText">

            <RadioGroup
                android:id="@+id/radioGroupRole"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <RadioButton
                    android:id="@+id/rbnutri"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nutrionist"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/rbUser"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="User"
                    android:textSize="14sp" />

            </RadioGroup>
        </LinearLayout>

        <!-- Already have account TextView -->
        <Button
            android:id="@+id/loginbutton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="#4CAF50"
            android:text="Register"
            app:layout_constraintTop_toBottomOf="@+id/newRadioGroupLayout"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/haveacct"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_marginTop="12dp"
            android:clickable="true"
            android:focusable="true"
            android:text="Already have an account?"
            android:textColor="#913DA6"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/loginbutton" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

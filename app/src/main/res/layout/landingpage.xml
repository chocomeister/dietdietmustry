<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4FBF8"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="114dp"
                android:layout_height="113dp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:src="@drawable/dietdietmusttry_logo" />

        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/roletext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="Please Select your role"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/userimg"
        android:layout_width="125dp"
        android:layout_height="122dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="96dp"
        android:clickable="true"
        android:src="@drawable/user_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roletext" />

    <ImageView
        android:id="@+id/nutriimg"
        android:layout_width="125dp"
        android:layout_height="110dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="60dp"
        android:clickable="true"
        android:src="@drawable/nutri_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roletext" />

    <TextView
        android:id="@+id/uText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="User"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/userimg"
        app:layout_constraintEnd_toEndOf="@+id/userimg"
        app:layout_constraintStart_toStartOf="@+id/userimg" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Nutritionist"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/nutriimg"
        app:layout_constraintEnd_toEndOf="@+id/nutriimg"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="@+id/nutriimg" />


</androidx.constraintlayout.widget.ConstraintLayout>

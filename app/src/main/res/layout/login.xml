<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4FBF8"
    tools:context=".LoginFragment">

    <!-- Header Section -->
    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F4F1E1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="114dp"
                android:layout_height="113dp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:src="@drawable/dietdietmusttry_logo" />

        </RelativeLayout>
    </RelativeLayout>

    <!-- Title TextView -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Log In"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2"
        tools:ignore="HardcodedText" />

    <!-- Input Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Username EditText -->
        <EditText
            android:id="@+id/firstName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#E6E0E9"
            android:ems="10"
            android:hint="Enter your username:"
            android:inputType="text"
            android:singleLine="true"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />

        <!-- Password EditText -->
        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#E6E0E9"
            android:ems="10"
            android:hint="Enter password:"
            android:inputType="textPassword"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />

        <!-- Forgot Password TextView -->
        <TextView
            android:id="@+id/forgotPW"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:text="Forget password?"
            android:textColor="#913DA6"
            android:textSize="12sp" />

        <!-- Log In Button -->
        <Button
            android:id="@+id/loginbutton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#A8F686"
            android:text="Log In" />

        <!-- Not Registered TextView -->
        <TextView
            android:id="@+id/noregis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:text="Not registered yet?"
            android:textColor="#913DA6"
            android:textSize="12sp"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

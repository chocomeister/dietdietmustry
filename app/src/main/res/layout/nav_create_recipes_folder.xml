<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F0F9F0">


    <!-- Main content layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0F9F0">

        <!-- Header layout with icons and logo -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="#F0F9F0">

            <ImageView
                android:id="@+id/right_icon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_menu_24"
                android:visibility="visible"
                tools:visibility="visible" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:id="@+id/logo"
                android:layout_centerVertical="true"
                android:src="@drawable/dietdietmusttry_logo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:text="Recipes Folder"/>
        </RelativeLayout>

        <!-- Search Bar -->
        <EditText
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="120dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="20dp"
            android:hint="Search Recipes Folder"
            android:padding="10dp"
            android:background="@drawable/rounded_search_bar_background"
            android:inputType="text"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="10dp"
            android:textColor="#000000" />

        <!-- Folder Container -->
        <RelativeLayout
            android:id="@+id/folder_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_bar"
            android:layout_marginTop="16dp">

            <!-- Grid Layout for Folders -->
            <GridLayout
                android:id="@+id/folder_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:padding="16dp">

                <!-- Folder: All Recipes -->
                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_item_background"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:src="@drawable/all_recipes"
                        android:layout_gravity="center_horizontal"/>

                    <Button
                        android:id="@+id/button_all_recipes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_marginTop="8dp"
                        android:text="All Recipes"
                        android:textColor="#000000"
                        android:padding="4dp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"/>

                </LinearLayout>

                <!-- Folder: Vegetarian Recipes -->
                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_item_background"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="140dp"
                        android:src="@drawable/vegetarian"
                        android:layout_gravity="center_horizontal"/>

                    <Button
                        android:id="@+id/button_vegetarian"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Vegetarian"
                        android:textColor="#000000"
                        android:padding="4dp"
                        android:background="@android:color/transparent"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"/>

                </LinearLayout>

                <!-- Folder: Favourite Recipes -->
                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_item_background"
                    android:layout_marginTop="8dp"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="140dp"
                        android:src="@drawable/favourite"
                        android:layout_gravity="center_horizontal"/>

                    <Button
                        android:id="@+id/button_favourite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Favourite Recipes"
                        android:textColor="#000000"
                        android:padding="4dp"
                        android:textStyle="bold"
                        android:background="@android:color/transparent"
                        android:layout_gravity="center_horizontal"/>

                </LinearLayout>

                <!-- Folder: Create Recipes -->
                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_item_background"
                    android:padding="8dp"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="121dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/baseline_add_24" />

                    <Button
                        android:id="@+id/button_create_recipes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Create Recipes"
                        android:textColor="#000000"
                        android:padding="4dp"
                        android:background="@android:color/transparent"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"/>

                </LinearLayout>

            </GridLayout>

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>

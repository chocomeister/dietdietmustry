<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F9F0">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/right_icon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_menu_24"
            android:visibility="visible"
            tools:visibility="visible" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:id="@+id/logo"
            android:layout_centerVertical="true"
            android:src="@drawable/dietdietmusttry_logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:text="Health Report"/>
    </RelativeLayout>

    <!-- Segmented Control (D, W, M, 6M, Y) -->
    <LinearLayout
        android:layout_width="355dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="26dp"
        android:gravity="center"
        android:background="@drawable/rounded_search_bar_background">

        <!-- Each Segment Button -->
        <Button
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="D"
            android:background="?attr/selectableItemBackground"
            android:textColor="#000000" />

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="W"
            android:background="?attr/selectableItemBackground"
            android:textColor="#000000" />

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="M"
            android:background="?attr/selectableItemBackground"
            android:textColor="#000000"
            android:backgroundTint="#C2C2C2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6M"
            android:background="?attr/selectableItemBackground"
            android:textColor="#000000" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y"
            android:background="?attr/selectableItemBackground"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- Container for Pie Chart with White Background -->
    <LinearLayout
        android:layout_width="355dp"
        android:layout_height="300dp"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="25dp"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/rounded_item_background">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <!-- Pie Chart -->
            <ImageView
                android:layout_width="350dp"
                android:layout_height="280dp"
                android:scaleType="fitCenter"
                android:src="@drawable/pie_chart" />

            <!-- Label for Slice 1 -->
            <TextView
                android:id="@+id/label_slice_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="-90dp"
                android:layout_marginTop="-60dp"
                android:text="25% Protein"
                android:textColor="#000000" />

            <!-- Label for Slice 2 -->
            <TextView
                android:id="@+id/label_slice_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="90dp"
                android:layout_marginTop="-60dp"
                android:text="25% Carbo"
                android:textColor="#000000" />

            <!-- Label for Slice 3 -->
            <TextView
                android:id="@+id/label_slice_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="100dp"
                android:text="18% Fats"
                android:textColor="#000000" />

            <!-- Label for Slice 4 -->
            <TextView
                android:id="@+id/label_slice_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="100dp"
                android:layout_marginTop="25dp"
                android:text="16% Vitamins"
                android:textColor="#000000" />

            <!-- Label for Slice 5 -->
            <TextView
                android:id="@+id/label_slice_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginTop="75dp"
                android:text="16% Mineral"
                android:textColor="#000000" />
        </FrameLayout>

    </LinearLayout>

    <!-- Summary Statistics -->
    <LinearLayout
        android:layout_width="355dp"
        android:layout_marginLeft="25dp"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:background="@drawable/rounded_item_background"
        android:padding="16dp"
        android:gravity="center"
        android:layout_marginTop="510dp" />

    <!-- Calories -->
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="535dp"
        android:layout_marginLeft="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calories"
            android:textColor="#A9A9A9"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="650,879"
            android:textColor="#000000"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

    <!-- Weights -->
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="535dp"
        android:layout_marginLeft="110dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Fats(g) "
            android:textColor="#A9A9A9"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3,999"
            android:textColor="#000000"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

    <!-- Steps -->
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="535dp"
        android:layout_marginLeft="210dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Steps"
            android:textColor="#A9A9A9"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="157,928"
            android:textColor="#000000"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="5dp"/>
    </LinearLayout>



    </RelativeLayout>
